<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_pill_info_lo"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/background"
    android:padding="10dp">

    <TextView
        android:id="@+id/item_pill_info_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/main_font"
        android:text="약 이름"
        android:textColor="@color/black"
        android:textSize="14dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/item_pill_info_contents_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.05" />

    <TextView
        android:id="@+id/item_pill_info_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/main_font"
        android:text="업체명"
        android:textColor="@color/black"
        android:textSize="12dp"
        android:textStyle="normal"
        app:layout_constraintBottom_toTopOf="@id/item_pill_info_contents_tv"
        app:layout_constraintEnd_toEndOf="@id/item_pill_info_name_tv"
        app:layout_constraintStart_toStartOf="@id/item_pill_info_name_tv"
        app:layout_constraintTop_toBottomOf="@id/item_pill_info_name_tv" />

    <TextView
        android:id="@+id/item_pill_info_contents_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/main_font"
        android:lineSpacingExtra="7dp"
        android:text="약 정보"
        android:textColor="@color/black"
        android:textSize="14dp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/item_pill_info_date_tv"
        app:layout_constraintStart_toStartOf="@id/item_pill_info_date_tv"
        app:layout_constraintTop_toBottomOf="@id/item_pill_info_date_tv" />

</androidx.constraintlayout.widget.ConstraintLayout>
