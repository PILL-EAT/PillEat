<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/add_pill_name_et"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/main_edittext"
            android:drawableLeft="@drawable/logo"
            android:drawablePadding="10dp"
            android:layout_marginTop="50dp"
            android:hint="약 이름"
            android:textSize="14dp"
            android:textColor="@color/black"
            android:fontFamily="@font/main_font"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <EditText
            android:id="@+id/add_pill_use_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/main_textarea"
            android:paddingTop="10dp"
            android:layout_marginTop="30dp"
            android:hint="사용법"
            android:textSize="14dp"
            android:paddingStart="10dp"
            android:textColor="@color/black"
            android:fontFamily="@font/main_font"
            android:gravity="top|start"
            app:layout_constraintTop_toBottomOf="@id/add_pill_name_et"
            app:layout_constraintStart_toStartOf="@id/add_pill_name_et"
            app:layout_constraintEnd_toEndOf="@id/add_pill_name_et"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/add_pill_save_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="저장"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:fontFamily="@font/main_font"
            android:background="@drawable/main_btn"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/add_pill_use_et"
            app:layout_constraintStart_toStartOf="@id/add_pill_use_et"
            app:layout_constraintEnd_toEndOf="@id/add_pill_use_et"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>