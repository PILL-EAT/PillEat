<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_taker_lo"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/main_taker_connect_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/main_btn"
        android:text="기기 연결하기"
        android:textStyle="bold"
        android:fontFamily="@font/main_font"
        android:textSize="20dp"
        android:textColor="@color/white"
        app:layout_constraintVertical_bias="0.11"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/main_taker_enroll_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/main_btn"
        android:text="복용 알림 등록"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        android:fontFamily="@font/main_font"
        android:layout_marginTop="65dp"
        app:layout_constraintTop_toBottomOf="@id/main_taker_connect_btn"
        app:layout_constraintStart_toStartOf="@id/main_taker_connect_btn"
        app:layout_constraintEnd_toEndOf="@id/main_taker_connect_btn"
        app:layout_constraintBottom_toTopOf="@id/main_taker_search_btn"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/main_taker_search_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/main_btn"
        android:text="약 검색하기"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:fontFamily="@font/main_font"
        android:textStyle="bold"
        android:layout_marginTop="65dp"
        app:layout_constraintTop_toBottomOf="@id/main_taker_enroll_btn"
        app:layout_constraintStart_toStartOf="@id/main_taker_enroll_btn"
        app:layout_constraintEnd_toEndOf="@id/main_taker_enroll_btn"
        app:layout_constraintBottom_toTopOf="@id/main_taker_enroll_protector_btn"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/main_taker_enroll_protector_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/main_btn"
        android:text="보호자 등록"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20dp"
        android:fontFamily="@font/main_font"
        android:layout_marginTop="65dp"
        app:layout_constraintStart_toStartOf="@id/main_taker_home_btn"
        app:layout_constraintEnd_toEndOf="@id/main_taker_home_btn"
        app:layout_constraintBottom_toTopOf="@id/main_taker_home_btn"
        app:layout_constraintTop_toBottomOf="@id/main_taker_search_btn"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/main_taker_home_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/main_btn"
        android:text="홈"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:fontFamily="@font/main_font"
        android:textStyle="bold"
        android:layout_marginTop="65dp"
        app:layout_constraintTop_toBottomOf="@id/main_taker_enroll_protector_btn"
        app:layout_constraintStart_toStartOf="@id/main_taker_enroll_btn"
        app:layout_constraintEnd_toEndOf="@id/main_taker_enroll_btn"
        app:layout_constraintBottom_toTopOf="@id/main_taker_setting_btn"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/main_taker_setting_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="설정"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:fontFamily="@font/main_font"
        android:background="@drawable/main_btn"
        android:layout_marginTop="65dp"
        app:layout_constraintTop_toBottomOf="@id/main_taker_home_btn"
        app:layout_constraintStart_toStartOf="@id/main_taker_home_btn"
        app:layout_constraintEnd_toEndOf="@id/main_taker_home_btn"/>

</androidx.constraintlayout.widget.ConstraintLayout>