<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/back_green"
    android:id="@+id/user_info_item_lo"
    android:layout_margin="5dp"
    android:padding="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/user_info_name_lo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:textStyle="bold"
            android:fontFamily="@font/main_font"
            android:layout_gravity="center_vertical"
            android:text="* 사용자명: "/>
        <TextView
            android:id="@+id/user_info_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="차은우"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_marginStart="5dp"
            android:textColor="@color/black"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/main_font" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/user_info_time_lo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/user_info_name_lo"
        app:layout_constraintStart_toStartOf="@id/user_info_name_lo">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/main_font"
            android:text="* 가입 날짜: "/>
        <TextView
            android:id="@+id/user_info_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2023년 12월 6일"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="5dp"
            android:textColor="@color/black"
            android:fontFamily="@font/main_font" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/user_info_birth_lo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/user_info_time_lo"
        app:layout_constraintStart_toStartOf="@id/user_info_time_lo">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/main_font"
            android:text="* 생년월일: "/>
        <TextView
            android:id="@+id/user_info_birth_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1997년 1월 1일"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="5dp"
            android:textColor="@color/black"
            android:fontFamily="@font/main_font" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/user_info_mode_lo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/user_info_birth_lo"
        app:layout_constraintStart_toStartOf="@id/user_info_birth_lo">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/main_font"
            android:text="* 가입 모드: "/>
        <TextView
            android:id="@+id/user_info_mode_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="복용자"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="5dp"
            android:textColor="@color/black"
            android:fontFamily="@font/main_font" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>