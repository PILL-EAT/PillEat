<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/main_manager_user_info_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/main_btn"
        android:text="사용자 정보 확인"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="16dp"
        android:fontFamily="@font/main_font"
        app:layout_constraintVertical_bias="0.35"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/main_manager_add_pill_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/main_btn"
        android:text="검색 약 추가하기"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="16dp"
        android:fontFamily="@font/main_font"
        android:layout_marginTop="65dp"
        app:layout_constraintStart_toStartOf="@id/main_manager_user_info_btn"
        app:layout_constraintEnd_toEndOf="@id/main_manager_user_info_btn"
        app:layout_constraintTop_toBottomOf="@id/main_manager_user_info_btn"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/main_manager_logout_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/main_btn"
        android:text="로그아웃하기"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="16dp"
        android:fontFamily="@font/main_font"
        android:layout_marginTop="65dp"
        app:layout_constraintStart_toStartOf="@id/main_manager_add_pill_btn"
        app:layout_constraintEnd_toEndOf="@id/main_manager_add_pill_btn"
        app:layout_constraintTop_toBottomOf="@id/main_manager_add_pill_btn"/>

</androidx.constraintlayout.widget.ConstraintLayout>