<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/setting_update_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/main_btn"
        android:text="정보 수정하기"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintVertical_bias="0.3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/setting_logout_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/main_btn"
        android:text="로그아웃하기"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:layout_marginTop="130dp"
        app:layout_constraintTop_toBottomOf="@id/setting_update_btn"
        app:layout_constraintStart_toStartOf="@id/setting_update_btn"
        app:layout_constraintEnd_toEndOf="@id/setting_update_btn"
        app:layout_constraintBottom_toTopOf="@id/setting_delete_btn"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/setting_delete_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/main_btn"
        android:text="회원 탈퇴하기"
        android:textSize="16dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginTop="130dp"
        app:layout_constraintStart_toStartOf="@id/setting_logout_btn"
        app:layout_constraintEnd_toEndOf="@id/setting_logout_btn"
        app:layout_constraintTop_toBottomOf="@id/setting_logout_btn"/>

</androidx.constraintlayout.widget.ConstraintLayout>