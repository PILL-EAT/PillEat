<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/start_search_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/main_btn"
        android:padding="0dp"
        android:text="약 검색하기"
        android:fontFamily="@font/main_font"
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintVertical_bias="0.43"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/start_login_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/main_btn"
        android:padding="0dp"
        android:text="로그인하기"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginTop="67dp"
        android:textColor="@color/white"
        android:fontFamily="@font/main_font"
        app:layout_constraintTop_toBottomOf="@id/start_search_btn"
        app:layout_constraintStart_toStartOf="@id/start_search_btn"
        app:layout_constraintEnd_toEndOf="@id/start_search_btn"/>

    <!--<임시>화면 확인용 버튼-->
    <Button
        android:id="@+id/start_checking"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>