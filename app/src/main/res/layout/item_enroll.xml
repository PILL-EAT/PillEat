<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/back_green"
    android:layout_margin="5dp"
    android:padding="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/enroll_name_lo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:textStyle="bold"
            android:fontFamily="@font/main_font"
            android:layout_gravity="center_vertical"
            android:text="* 약 이름: "/>
        <TextView
            android:id="@+id/enroll_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="유산균"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_marginStart="5dp"
            android:textColor="@color/black"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/main_font" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/enroll_category_lo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/enroll_name_lo"
        app:layout_constraintStart_toStartOf="@id/enroll_name_lo">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/main_font"
            android:text="* 약 종류: "/>
        <TextView
            android:id="@+id/enroll_category_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="프로바이오틱스 유산균"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="5dp"
            android:textColor="@color/black"
            android:fontFamily="@font/main_font" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/enroll_volumn_lo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/enroll_category_lo"
        app:layout_constraintStart_toStartOf="@id/enroll_category_lo">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/main_font"
            android:text="* 약 용량: "/>
        <TextView
            android:id="@+id/enroll_volumn_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2.5mg"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="5dp"
            android:textColor="@color/black"
            android:fontFamily="@font/main_font" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/enroll_time_lo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/enroll_volumn_lo"
        app:layout_constraintStart_toStartOf="@id/enroll_volumn_lo">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/main_font"
            android:text="* 복용 시간: "/>
        <TextView
            android:id="@+id/enroll_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15시 00분"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="5dp"
            android:textColor="@color/black"
            android:fontFamily="@font/main_font" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>